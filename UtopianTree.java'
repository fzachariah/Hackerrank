import java.util.Scanner;
class Solution {
	 
       

	public static void main(String args[])
	{
		int T,N,i;
		
		  Scanner sc= new Scanner(System.in);
		     T = sc.nextInt();
		     while(T!=0)
		     {
		    	 int s=1;
		    	
		    	 N =sc.nextInt();
		    	 for(i=1;i<=N;i++)
		    	 {
		    		 if(i%2==0)
		    		 {
		    			 s++;
		    		 }
		    		 else
		    		 {
		    			 s=s*2;
		    		 }
		    	 }
		    	 T--;
		    	 System.out.println(s);
		     }
	}

}
